<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:orientation="vertical" >
   <TextView 
       android:id="@+id/playing_activity_music_name"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="5dp"
       android:textSize="24sp"
       android:gravity="center_horizontal"
       android:singleLine="true"
       android:ellipsize="end"/>
   <TextView 
       android:id="@+id/playing_activity_music_singer"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="5dp"
       android:textSize="16sp"
       android:gravity="center_horizontal"
       android:singleLine="true"
       android:ellipsize="end"/>
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1">
        <user_defined.LrcContentView
       		android:id="@+id/lrcContent_textview"
       		android:layout_width="match_parent"
       		android:layout_height="250dp"
       		android:layout_gravity="center_vertical"
       		android:gravity="center"
       		android:text="32sp"
       		android:layout_margin="10dp">
   		</user_defined.LrcContentView>
   </LinearLayout>
	
	<user_defined.PlayerLayoutView
	    android:id="@+id/playing_activity_playerview"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    
	</user_defined.PlayerLayoutView>
</LinearLayout>
